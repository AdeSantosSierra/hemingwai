{
  "manifest_version": 3,
  "name": "HemingwAI - Analizador de Noticias",
  "version": "2.0",
  "description": "Verifica la calidad de las noticias que lees con inteligencia artificial.",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo_small.png"],
      "matches": ["<all_urls>"]
    }
  ]
}