{
  "manifest_version": 3,
  "name": "HemingwAI - Analizador de Noticias",
  "version": "2.1",
  "description": "Verifica la calidad de las noticias que lees con inteligencia artificial.",
  "permissions": ["scripting", "storage", "activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo_extension_blue.png", "logo_ectension_blanco.png"],
      "matches": ["<all_urls>"]
    }
  ]
}