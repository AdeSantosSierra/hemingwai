{
  "manifest_version": 3,
  "name": "Numerador de Titulares",
  "version": "1.0",
  "description": "Añade un número aleatorio a cada titular en cualquier página web",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
